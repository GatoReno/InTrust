<div class="container p-4 ">
    <div class="row">
        <div class="col-lg-3 col-sm-6">





            {{#if user.owner}}
            <h1>owner</h1>

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <div class="avatar">
                    <img alt="" src="http://lorempixel.com/100/100/people/9/">
                </div>
                <div class="info">
                    <div class="title">
                        <a target="_blank" href="https://scripteden.com/">Script Eden</a>
                    </div>
                    <div class="desc">{{user.name}}</div>
                    <div class="desc">Curious developer {{user.id_user}}</div>
                    <div class="desc">Tech geek {{user.pass}}</div>
                </div>
                <div class="bottom">
                    <a class="btn btn-primary btn-twitter btn-sm" href="https://twitter.com/webmaniac">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" rel="publisher" href="https://plus.google.com/+ahmshahnuralam">
                        <i class="fa fa-google-plus"></i>
                    </a>
                    <a class="btn btn-primary btn-sm" rel="publisher" href="https://plus.google.com/shahnuralam">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a class="btn btn-warning btn-sm" rel="publisher" href="https://plus.google.com/shahnuralam">
                        <i class="fa fa-behance"></i>
                    </a>
                </div>
            </div>
            {{/if}}






        </div>
    </div>



    {{!-- ADMIN --}}
    {{#if user.admin}}

    <div class="row">
        <h3>Admin</h3>

        <div class="">
            {{!-- Navegador de pestañas --}}
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Perfil Admin</a></li>
                <li><a data-toggle="tab" href="#menu1">Admin</a></li>
                <li><a data-toggle="tab" href="#menu2">Noticias</a></li>
                <li><a data-toggle="tab" href="#menu3">Proyectos</a></li>
                <li><a data-toggle="tab" href="#menu4">Medallas</a></li>
                <li><a data-toggle="tab" href="#menu5">Actividades</a></li>

            </ul>

            <div class="tab-content ">
                <div id="home" class="tab-pane fade in active p3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Perfil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Actualizar datos</li>
                        </ol>
                    </nav>
                    <div class="card hovercard">
                        <div class="cardheader">

                        </div>
                        <div class="avatar">
                            <img style=' width:100px;height:100px;' src='data:image/jpeg;base64, {{user.img}}'>

                        </div>
                        <div class="info">
                            <div class="title">
                                <a target="_blank" href="https://scripteden.com/">Script Eden</a>
                            </div>
                            <div class="desc">{{user.name}}</div>
                            <div class="desc">Curious developer {{user.id_user}}</div>
                            <div class="desc">Tech geek {{user.pass}}</div>
                        </div>
                        <div class="bottom top2">
                            <a class="btn btn-primary btn-twitter btn-sm" href="https://twitter.com/webmaniac">
                                <i class="fa fa-twitter"></i>
                            </a>
                            <a class="btn btn-danger btn-sm" rel="publisher" href="https://plus.google.com/+ahmshahnuralam">
                                <i class="fa fa-google-plus"></i>
                            </a>
                            <a class="btn btn-primary btn-sm" rel="publisher" href="https://plus.google.com/shahnuralam">
                                <i class="fa fa-facebook"></i>
                            </a>
                            <a class="btn btn-warning btn-sm" rel="publisher" href="https://plus.google.com/shahnuralam">
                                <i class="fa fa-behance"></i>
                            </a>
                        </div>
                    </div>
                </div>

                {{!-- Pestañas --}}
                <div id="menu1" class="tab-pane fade p3">
                    <h3>Admin/sub-Admin</h3>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/signup/subadmin">Agregar sub-Admin</a></li>
                            <li class="breadcrumb-item"><a href="#">Ver Lista </a></li>
                            <li class="breadcrumb-item active" aria-current="page"></li>
                        </ol>
                    </nav>


                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <h3>Administración</h3>
                        <div class="top2 table-wrapper-scroll-y">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Img</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Action</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each json.admins}}
                                    <tr>
                                        <td>
                                            <img style=' width:20px;height:20px;' src='data:image/jpeg;base64, {{img}}'>
                                        </td>
                                        <td>
                                            {{name}}
                                        </td>
                                        <td>
                                            <a href="/links/updateadmin/{{id_user}}" class="btn btn-default btn-sm">Update</a>

                                        </td>


                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>

                    </div>



                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <h3>Owner de proyecto</h3>
                        <div class="top2 table-wrapper-scroll-y">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Img</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Action</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each json.owners}}
                                    <tr>
                                        <td>
                                            <img style=' width:20px;height:20px;' src='data:image/jpeg;base64, {{img}}'>
                                        </td>
                                        <td>
                                            {{name}}
                                        </td>
                                        <td>
                                            <a href="/links/updateadmin/{{id_user}}" class="btn btn-default btn-sm">Update</a>

                                        </td>


                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>

                    </div>


                    {{! termina menu 1}}
                </div>
                <div id="menu2" class="tab-pane fade p3">
                    <h3>Noticias</h3>
                    <p>Some content in menu 2.</p>


                    {{! termina menu 2}}
                </div>



                <div id="menu3" class="tab-pane fade p3">
                    <h3>Administración Proyectos</h3>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/links/add">Agregar Proyecto</a></li>

                        </ol>
                    </nav>

                    {{#each json.links}}
                    <div class="col-12 col-sm-6  col-md-4 col-lg-3">

                        <div class="card text-center">
                            <a href="">
                                <a href="links/viewproyect/{{id}}">
                                    <h3 class="card-title text-uppercase">
                                        {{title}}
                                    </h3>
                                </a>
                            </a>
                            <div class="card-body ">
                                <div>
                                    {{description}}
                                </div>
                                <div>
                                    {{url}}
                                </div>
                                <br>
                                <div>
                                    <a href="/links/viewproyect/{{id}}" class="btn btn-default btn-sm">Ver Proyecto</a>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div>
                                    <br>
                                    <a href="/links/delete/{{id}}" class="btn btn-default btn-sm">Delete</a>
                                    <a href="/links/update/{{id}}" class="btn btn-default btn-sm">Update</a>

                                </div>
                                <div>
                                    <br>
                                    creado el día: {{timeago created_at}}
                                </div>
                            </div>
                        </div>



                    </div>
                    {{else}}
                    <div class="col-12 ">
                        <div class="card text-center">
                            <div class="card-body">
                                <p>No hay sub-administradores</p>
                                <a href="/links/add" class="btn btn-default sm">Agregar uno</a>
                                <a href="/links/add" class="btn btn-default">Añadir proyecto</a>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                    {{! termina menu 3}}
                </div>

                <div id="menu4" class="tab-pane fade p3">
                    <h3>Medallas</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/links/add">Agregar Proyecto</a></li>

                        </ol>
                    </nav>


                    {{! termina menu 4}}
                </div>


                <div id="menu5" class="tab-pane fade p3">
                    <h3>Actividades</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/links/add">Agregar Proyecto</a></li>

                        </ol>
                    </nav>


                    {{! termina menu 4}}
                </div>

            </div>
        </div>






        {{/if}}

    </div>